#!/usr/bin/env bash

sudo add-apt-repository ppa:kgilmer/speed-ricer
sudo apt-get update

sudo apt-get install -y i3-gaps-wm \
	arc-theme \
	fish \
	flameshot \
	feh \
	fonts-firacode \
	fzy \
	git \
	compton \
	i3blocks \
	i3lock \
	i3status \
	moka-icon-theme \
	nnn \
	pulseaudio \
	python \
	python-pip \
	rofi \
	screenfetch \
	terminator \
	pass \
	stow \
	fortune \
	cowsay \
	lolcat \
	vifm

#spotify-tui
sudo snap install spt

sudo snap install --edge nvim --classic

#Get my password-store passwords (mostly for spotifyd)
git clone git@github.com:StewartThomson/pass-store.git ~/.password-store/

chsh -s `which fish`

sudo cp i3.desktop /usr/share/xsessions

sudo update-alternatives --install /usr/bin/x-session-manager x-session-manager /usr/bin/i3 60

